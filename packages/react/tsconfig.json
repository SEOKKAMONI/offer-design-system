{
  "extends": "../../tsconfig.base.json",
  "include": ["src", "vite.config.ts", "*.d.ts"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@offer-ui/components/*": ["components/*"],
      "@offer-ui/components": ["components"],
      "@offer-ui/constants/*": ["constants/*"],
      "@offer-ui/constants": ["constants"],
      "@offer-ui/hooks/*": ["hooks/*"],
      "@offer-ui/hooks": ["hooks"],
      "@offer-ui/styles/*": ["styles/*"],
      "@offer-ui/styles": ["styles"],
      "@offer-ui/themes/*": ["styles/themes/*"],
      "@offer-ui/themes": ["styles/themes"],
      "@offer-ui/types/*": ["types/*"],
      "@offer-ui/types": ["types"],
      "@offer-ui/utils/*": ["utils/*"],
      "@offer-ui/utils": ["utils"]
    }
  }
}
